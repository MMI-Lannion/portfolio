---
import { ButtonNext, ButtonPrev } from "@/components/ButtonNext";
import EditableTextArea from "@/components/EditableTextArea";
import SyntheseFiles from "@/components/SyntheseFiles";
import { TreeMap } from "@/components/TreeMap";
import { PageHeading, PageSubHeading, PageText } from "@/components/Typography";
import { Flex, Separator } from "@radix-ui/themes";
import Layout from "../layouts/Layout.astro";
import { QuickNav } from "@/components/QuickNav";
---

<Layout title="Synthèse SAE">
  <QuickNav client:load />

  <PageHeading title="Synthèse" badgeTitle="Etape 1" badgeColor="pink" />

  <Flex
    id="treemap"
    direction="column"
    gap="5"
    align="center"
    width="100%"
    mb="6"
  >
    <Flex direction="column" gap="2">
      <PageSubHeading title="Compétences" />

      <TreeMap client:only />
    </Flex>

    <Separator style={{ width: "30%" }} />

    <Flex direction="column" gap="2" width="100%">
      <PageSubHeading title="Contexte et Objectifs" />

      <EditableTextArea
        placeholder={"Expliquer en quelques lignes : le contexte du projet, de l'entreprise, ses valeurs, ses enjeux. Formuler l'objectif de la SAE, ce qui vous est demandé"}
        dataKey="contexte"
        client:load
      />
    </Flex>

    <Separator style={{ width: "30%" }} />

    <Flex direction="column" gap="2" width="100%">
      <PageSubHeading title="Démarche de Projet > Etapes" />

      <EditableTextArea
        placeholder={"Expliquer en quelques lignes votre démarche projet ainsi quel es étapes/actions que vous avez mis en place pour réaliser les livrables"}
        dataKey="demarche"
        client:load
      />
    </Flex>

    <Separator style={{ width: "30%" }} />

    <Flex direction="column" gap="2" width="100%">
      <PageSubHeading title="Livrables attendus" />

      <EditableTextArea
        placeholder={"Nommer les livrables réalisés"}
        dataKey="livrable"
        client:load
      />
    </Flex>

    <Separator style={{ width: "30%" }} />

    <Flex direction="column" gap="2" width="100%">
      <PageSubHeading title="Pièces Jointes" />

      <PageText>
        Indiquer une preuve (ou plusieurs) de vos réalisations (jpeg, pdf,
        video, doc, docx, odt)
      </PageText>

      <SyntheseFiles client:load />
    </Flex>

    <Separator style={{ width: "30%" }} />
  </Flex>

  <Flex justify="end" direction="row" m="3" gapX="3">
    <ButtonPrev name="Précendent" href="/" />
    <ButtonNext name="Suivant" href="/auto-evaluation" />
  </Flex>
</Layout>
