---
import Layout from "../layouts/Layout.astro";
import { Flex, Heading } from '@radix-ui/themes';
import LoginForm from '../components/LoginForm.jsx';
---

<Layout title="Login">
  <Flex align="center" justify="center" css={{ height: '100vh' }}>
    <Flex gap="2" padding="4" maxWidth="400px" margin="0 auto" backgroundColor="white" borderRadius="medium" boxShadow="medium" direction="column">
      <Heading size="4" marginBottom="4">Login</Heading>
      <LoginForm />
    </Flex>
  </Flex>
</Layout>