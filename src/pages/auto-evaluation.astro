---
import { ButtonNext, ButtonPrev } from "@/components/ButtonNext";
import { PageHeading, PageSubHeading, PageText } from "@/components/Typography";
import {
  HardskillsRadar,
  SoftskillsSunburst,
  ToolsRadar,
} from "@components/AutoEvaluation";
import { Flex, Separator } from "@radix-ui/themes";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Auto-évaluation">
  <PageHeading
    title="Auto Evaluation"
    badgeTitle="Etape 3"
    badgeColor="purple"
  />

  <Flex direction="column" gap="5" align="center" width="100%" mb="6">
    <Flex direction="column" gap="2">
      <PageSubHeading title="Hardskills" />

      <PageText>
        Estimez votre niveau de maitrise pour chaque sous compétence sur une
        échelle de 1 à 5 (1 = Pas du tout maitrisé ; 5 = Tout à fait maitrisé)
      </PageText>

      <HardskillsRadar client:load />
    </Flex>

    <Separator style={{ width: "30%" }} />

    <Flex direction="column" gap="2">
      <PageSubHeading title="Softskills" />

      <PageText>
        Identifiez le ou les softskills que vous avez utilisé lors de votre SAE
        ou de votre projet en ressource
      </PageText>

      <SoftskillsSunburst client:load />
    </Flex>

    <Separator style={{ width: "30%" }} />

    <Flex direction="column" gap="2">
      <PageSubHeading title="Outils et méthodes" />

      <PageText>
        Estimer votre niveau de maitrise pour chaque outil et méthode sur une
        échelle de 1 à 5 (1 = Pas du tout maitrisé ; 5 = Tout à fait maitrisé)
      </PageText>

      <ToolsRadar client:load />
    </Flex>

    <Separator style={{ width: "30%" }} />
  </Flex>

  <!-- <LikertScale /> -->
  <!-- <LikertScaleEmoji name="test" /> -->

  <Flex justify="end" direction="row" m="3" gapX="3">
    <ButtonPrev name="Précendent" href="/synthese" />
    <ButtonNext name="Suivant" href="/plan-actions" />
  </Flex>
</Layout>
