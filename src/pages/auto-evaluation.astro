---
import Layout from "../layouts/Layout.astro";
import { Link, Heading, Flex, Box, Badge, Separator } from "@radix-ui/themes";
import AutoEvaluation from "@components/AutoEvaluation";
import { ButtonNext } from "@/components/ButtonNext";
import LikertScale from "@/components/LikertScale";
import LikertScaleEmoji from "@/components/LikertScaleEmoji";
---

<Layout title="Welcome to Astro.">
  <Box mb="4">
    <Flex gap="1" align="center" mb="2">
      <Heading as="h1" size="6">Auto Evaluation</Heading>
      <Badge size="3" color="indigo">2</Badge>
    </Flex>
    <Separator
      style={{ width: "10%", background: "#000" }}
      size="4"
      orientation="horizontal"
    />
  </Box>

  <Box>
    <AutoEvaluation client:only />
  </Box>

  <LikertScale name="test" />
  <LikertScaleEmoji name="test" />

  <Flex justify="end" direction="row" m="3" gapX="3">
    <ButtonNext name="Retour" href="../saisie-sae" />
    <ButtonNext name="Etape 3" href="../plan-actions" />
  </Flex>
</Layout>
