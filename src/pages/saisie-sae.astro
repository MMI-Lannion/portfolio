---
import { Combobox } from "@components/Combobox";
import { ButtonNext } from "@/components/ButtonNext";
import Layout from "../layouts/Layout.astro";
import {
  Link,
  Heading,
  Box,
  Flex,
  Separator,
  Badge,
  Text,
} from "@radix-ui/themes";
import TextAreaComponent from "@/components/TextAreaComponent";
import { TreeMap } from "@/components/TreeMap";
import InputFile from "@/components/InputFile";
import { ArchiveIcon, ClipboardIcon, ReaderIcon } from "@radix-ui/react-icons";
---

<Layout title="Saisie sae">
  <Box mb="4">
    <Flex gap="1" align="center" mb={{ initial: "4", md: "2" }}>
      <Heading as="h1" size={{ initial: "9", md: "6" }}>Synthèse</Heading>
      <Badge size="3" color="pink">1</Badge>
    </Flex>
    <Separator
      style={{ width: "10%", background: "#000" }}
      size="4"
      orientation="horizontal"
    />
  </Box>

  <Flex direction="column" gap="4">
    <Flex direction="column" gap="1">
      <Heading as="h3" size={{ initial: "6", md: "3" }}
        >Choisir Votre SAE :</Heading
      >
      <Combobox />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h3" mb="2" size={{ initial: "6", md: "3" }}
        >Graphique en Tree Map :</Heading
      >
      <TreeMap />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h3" size={{ initial: "6", md: "3" }}>Description :</Heading>
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h4" size={{ initial: "4", md: "2" }}
        >Contexte et Objectifs :</Heading
      >
      <TextAreaComponent
        placeholder={"Présentez votre projet en quelques phrases"}
        client:load
      />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h4" size={{ initial: "4", md: "2" }}
        >Démarche de Projet :
      </Heading>
      <TextAreaComponent
        placeholder={"Quelle a été la méthodologie pour réaliser les étapes du projet"}
        client:load
      />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h4" size={{ initial: "4", md: "2" }}>Livrables :</Heading>
      <TextAreaComponent
        placeholder={"Présentez vos livrables finaux en quelques phrases"}
        client:load
      />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h3" size={{ initial: "6", md: "3" }}
        >Indiquer une preuve (ou plusieurs) de vos réalisations</Heading
      >
      <Text> (jpeg, pdf, video, doc, docx, odt)</Text>
      <InputFile />
    </Flex>
  </Flex>

  <Flex justify="end" direction="row" m="3" gapX="3">
    <ButtonNext name="Etape 2" href="../auto-evaluation" />
  </Flex>
</Layout>
