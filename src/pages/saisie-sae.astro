---
import { Combobox } from "@components/Combobox";
import { ButtonNext } from "@/components/ButtonNext";
import Layout from "../layouts/Layout.astro";
import { Link, Heading, Box, Flex, Separator, Badge } from "@radix-ui/themes";
import TextAreaComponent from "@/components/TextAreaComponent";
import { TreeMap } from "@/components/TreeMap";
import InputFile from "@/components/InputFile";
---

<Layout title="Saisie sae">
  <Box mb="4">
    <Flex gap="1" align="center" mb="2">
      <Heading as="h1" size="6">Synthèse</Heading>
      <Badge size="3" color="orange">1</Badge>
    </Flex>
    <Separator
      style={{ width: "10%", background: "#000" }}
      size="4"
      orientation="horizontal"
    />
  </Box>

  <Flex direction="column" gap="4">
    <Flex direction="column" gap="1">
      <Heading as="h3" size="3">Choisir Votre SEA :</Heading>
      <Combobox />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h3" size="3">Graphique en Tree Map :</Heading>
      <TreeMap />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h3" size="3">Description :</Heading>
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h4" size="2">Contexte et Objectifs :</Heading>
      <TextAreaComponent client:load />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h4" size="2"
        >Démarche de Projet &rsaquo; Etapes de Réalisation
      </Heading>
      <TextAreaComponent client:load />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h4" size="2">Livrables :</Heading>
      <TextAreaComponent client:load />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h3" size="3"
        >Indiquer une preuve (ou plusieurs) de vos réalisations (jpeg, pdf,
        video, doc, docx, odt)</Heading
      >
      <InputFile />
    </Flex>
  </Flex>

  <Flex justify="end" direction="row" m="3" gapX="3">
    <ButtonNext name="Etape 2" href="../auto-evaluation" />
  </Flex>
</Layout>
