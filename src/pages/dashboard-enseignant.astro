---
import Layout from "../layouts/Layout.astro";
import { Combobox } from "@components/Combobox";
import { TreeMap } from "@/components/TreeMap";
import { Radar } from "@/components/Radar";
import TextAreaComponent from "@/components/TextAreaComponent";
import { Link, Heading, Box, Separator, Flex } from "@radix-ui/themes";
---
<Layout title="Tableau de bord">
  <Box mb="4">
    <Flex gap="1" align="center" mb="2">
      <Heading as="h1" size="6">Tableau de Bord</Heading>
    </Flex>
    <Separator
      style={{ width: "10%", background: "#000" }}
      size="4"
      orientation="horizontal"
    />
  </Box>

  <Flex direction="column" gap="4">
    <Flex direction="column" gap="1">
      <Heading as="h3" size="3">Liste des Ã©tudiants :</Heading>
      <Combobox />
    </Flex>

    <Flex direction="column" gap="1">
        <Heading as="h3" size="3">Graphique en Tree Map :</Heading>
        <TreeMap />
      </Flex>

      <Flex direction="column" gap="1">
        <Heading as="h3" size="3">Feedback par SAE :</Heading>
      </Flex>
      <Flex>
        <Radar/> <Radar/>  <Radar/> 
      </Flex>

      <Flex direction="column" gap="1">
        <Heading as="h4" size="2">Saisie de Feedback :</Heading>
        <TextAreaComponent client:load />
      </Flex>
  </Flex>
</Layout>
