---
import { Combobox } from "@/components/Combobox";
import TableActionPlan from "../components/TableActionPlan";
import Layout from "../layouts/Layout.astro";
import { Link, Heading, Flex, Badge, Separator, Box } from "@radix-ui/themes";
import TextAreaComponent from "@/components/TextAreaComponent";

const handleChange = (e) => {
  console.log(e);
};
---

<Layout title="Plan d'actions">
  <Box mb="4">
    <Flex gap="1" align="center" mb="2">
      <Heading as="h1" size="6">Plan d'actions d'améliorations</Heading>
      <Badge size="3" color="indigo">3</Badge>
    </Flex>
    <Separator
      style={{ width: "20%", background: "#000" }}
      size="4"
      orientation="horizontal"
    />
  </Box>

  <Flex direction="column" gap="4">
    <Flex direction="column" gap="1">
      <Heading as="h3" size="3">Mes axes d'améliorations :</Heading>
      <TableActionPlan client:load onChange={handleChange} />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h3" size="3">Compétence clé :</Heading>
      <Combobox />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h3" size="3">Sous-Compétence :</Heading>
      <Combobox />
    </Flex>

    <Flex direction="column" gap="1">
      <Heading as="h3" size="3"> Actions à mener </Heading>
      <TextAreaComponent />
    </Flex>
  </Flex>

  <Flex justify="end">
    <Link href="../auto-evaluation">Retour</Link>
    <Link href="../dashboard">Prochaine étape</Link>
  </Flex>
</Layout>
